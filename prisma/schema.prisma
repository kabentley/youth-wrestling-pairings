generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



enum Role {
  ADMIN
  COACH
  PARENT
}

enum MeetWrestlerStatus {
  LATE
  EARLY
  ABSENT
}
model Team {
  id        String     @id @default(cuid())
  name      String     @unique
  symbol    String     @unique
  color     String     @default("#000000")
  logoData  Bytes?
  logoType  String?
  createdAt DateTime   @default(now())
  wrestlers Wrestler[]
  meetTeams MeetTeam[]
  homeMeets Meet[]     @relation("MeetHomeTeam")
  matRules  TeamMatRule[]
  homeTeamPreferSameMat Boolean @default(false)
}

model League {
  id       String  @id @default(cuid())
  name     String?
  logoData Bytes?
  logoType String?
}

model Wrestler {
  id              String   @id @default(cuid())
  teamId          String
  team            Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  guid            String   @unique @default(uuid())

  first           String
  last            String
  weight          Float
  birthdate       DateTime
  experienceYears Int
  skill           Int
  active          Boolean  @default(true)

  createdAt       DateTime @default(now())
  meetStatuses    MeetWrestlerStatus[]
  parentLinks     UserChild[]

  @@index([teamId])
  @@index([last, first])

  @@unique([teamId, first, last, birthdate])
}

model Meet {
  id        String     @id @default(cuid())
  name      String
  date      DateTime
  location  String?
  createdAt DateTime   @default(now())
  homeTeamId String?
  homeTeam   Team?     @relation("MeetHomeTeam", fields: [homeTeamId], references: [id])
  numMats   Int        @default(4)
  allowSameTeamMatches Boolean @default(false)
  matchesPerWrestler Int @default(1)

  lockedById    String?
  lockedBy      User?    @relation("MeetLock", fields: [lockedById], references: [id])
  lockedAt      DateTime?
  lockExpiresAt DateTime?

  meetTeams MeetTeam[]
  bouts     Bout[]
  excluded  ExcludedPair[]
  wrestlerStatuses MeetWrestlerStatus[]
}

model MeetWrestlerStatus {
  id         String   @id @default(cuid())
  meetId     String
  wrestlerId String
  status     MeetWrestlerStatus
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  meet     Meet     @relation(fields: [meetId], references: [id], onDelete: Cascade)
  wrestler Wrestler @relation(fields: [wrestlerId], references: [id], onDelete: Cascade)

  @@unique([meetId, wrestlerId])
  @@index([meetId])
  @@index([wrestlerId])
}

model TeamMatRule {
  id            String  @id @default(cuid())
  teamId        String
  matIndex      Int
  color         String?
  minExperience Int
  maxExperience Int
  minAge        Float
  maxAge        Float

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([teamId, matIndex])
  @@index([teamId])
}

model MeetTeam {
  meetId String
  teamId String

  meet   Meet @relation(fields: [meetId], references: [id], onDelete: Cascade)
  team   Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@id([meetId, teamId])
}

model Bout {
  id        String   @id @default(cuid())
  meetId    String
  meet      Meet     @relation(fields: [meetId], references: [id], onDelete: Cascade)

  redId     String
  greenId   String
  type      String
  score     Float

  locked    Boolean  @default(false)
  notes     String?

  mat       Int?
  order     Int?

  createdAt DateTime @default(now())

  @@index([meetId])
// --- Results ---
resultWinnerId String?
resultWinner   Wrestler? @relation("BoutWinner", fields: [resultWinnerId], references: [id])
resultType     String?   // e.g., DEC, MAJ, TF, FALL, DQ, FOR
resultScore    String?   // e.g., 6-2
resultPeriod   Int?      // 1..3
resultTime     String?   // mm:ss
resultNotes    String?
resultAt       DateTime?

}


model ExcludedPair {
  id        String   @id @default(cuid())
  meetId    String
  meet      Meet     @relation(fields: [meetId], references: [id], onDelete: Cascade)

  aId       String
  bId       String

  createdAt DateTime @default(now())

  @@unique([meetId, aId, bId])
  @@index([meetId])
}

// --- NextAuth.js models ---
model User {
  role          Role     @default(PARENT)
  id            String   @id @default(cuid())
  name          String?
  username      String   @unique
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  teamId        String?
  team          Team?    @relation(fields: [teamId], references: [id])

  passwordHash  String?
  mfaEnabled    Boolean  @default(false)
  mfaSecret     String?  // base32 (TOTP)
  mfaTempSecret String?  // used during MFA enrollment

  accounts      Account[]
  sessions      Session[]
  meetLocks     Meet[]   @relation("MeetLock")
  children      UserChild[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model UserChild {
  id         String   @id @default(cuid())
  userId     String
  wrestlerId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wrestler Wrestler @relation(fields: [wrestlerId], references: [id], onDelete: Cascade)

  @@unique([userId, wrestlerId])
  @@index([userId])
  @@index([wrestlerId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}



// enums are not supported by the sqlite connector; use string fields instead.
model Team {
  id        String     @id @default(cuid())
  name      String     @unique
  symbol    String     @unique
  color     String     @default("#000000")
  address   String?
  website   String?
  logoData  Bytes?
  logoType  String?
  createdAt DateTime   @default(now())
  wrestlers Wrestler[]
  meetTeams MeetTeam[]
  homeMeets Meet[]     @relation("MeetHomeTeam")
  matRules  TeamMatRule[]
  numMats   Int        @default(4)
  homeTeamPreferSameMat Boolean @default(false)
  headCoachId String?   @unique
  headCoach   User?     @relation("TeamHeadCoach", fields: [headCoachId], references: [id], onDelete: SetNull)
  coaches   User[]
}

model League {
  id       String  @id @default(cuid())
  name     String?
  website  String?
  logoData Bytes?
  logoType String?
}

model Wrestler {
  id              String   @id @default(cuid())
  teamId          String
  team            Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  guid            String   @unique @default(uuid())

  first           String
  last            String
  weight          Float
  birthdate       DateTime
  experienceYears Int
  skill           Int
  active          Boolean  @default(true)

  createdAt       DateTime @default(now())
  meetStatuses    MeetWrestlerStatus[]
  meetStatusHistory MeetWrestlerStatusHistory[] @relation("WrestlerStatusHistory")
  parentLinks     UserChild[]
  wonBouts        Bout[]   @relation("BoutWinner")

  @@index([teamId])
  @@index([last, first])

  @@unique([teamId, first, last])
}

model Meet {
  id        String     @id @default(cuid())
  name      String
  date      DateTime
  location  String?
  createdAt DateTime   @default(now())
  homeTeamId String?
  homeTeam   Team?     @relation("MeetHomeTeam", fields: [homeTeamId], references: [id])
  numMats   Int        @default(4)
  allowSameTeamMatches Boolean @default(false)
  matchesPerWrestler Int @default(1)
  status    String    @default("DRAFT")
  updatedAt DateTime  @updatedAt
  updatedById String?
  updatedBy User?     @relation("MeetUpdatedBy", fields: [updatedById], references: [id])

  lockedById    String?
  lockedBy      User?    @relation("MeetLock", fields: [lockedById], references: [id])
  lockedAt      DateTime?
  lockExpiresAt DateTime?

  meetTeams MeetTeam[]
  bouts     Bout[]
  wrestlerStatuses MeetWrestlerStatus[]
  meetChanges MeetChange[]
  meetComments MeetComment[]
  meetStatusHistory MeetWrestlerStatusHistory[] @relation("MeetStatusHistory")
}

model MeetWrestlerStatus {
  id         String   @id @default(cuid())
  meetId     String
  wrestlerId String
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  meet     Meet     @relation(fields: [meetId], references: [id], onDelete: Cascade)
  wrestler Wrestler @relation(fields: [wrestlerId], references: [id], onDelete: Cascade)

  @@unique([meetId, wrestlerId])
  @@index([meetId])
  @@index([wrestlerId])
}

model MeetWrestlerStatusHistory {
  id         String   @id @default(cuid())
  meetId     String
  wrestlerId String
  status     String
  changedById String
  createdAt  DateTime @default(now())

  meet     Meet     @relation("MeetStatusHistory", fields: [meetId], references: [id], onDelete: Cascade)
  wrestler Wrestler @relation("WrestlerStatusHistory", fields: [wrestlerId], references: [id], onDelete: Cascade)
  changedBy User    @relation("MeetStatusChangedBy", fields: [changedById], references: [id], onDelete: Cascade)

  @@index([meetId])
  @@index([wrestlerId])
  @@index([changedById])
}

model MeetChange {
  id        String   @id @default(cuid())
  meetId    String
  actorId   String
  message   String
  createdAt DateTime @default(now())

  meet  Meet @relation(fields: [meetId], references: [id], onDelete: Cascade)
  actor User @relation("MeetChangeActor", fields: [actorId], references: [id], onDelete: Cascade)

  @@index([meetId])
  @@index([actorId])
}

model MeetComment {
  id        String   @id @default(cuid())
  meetId    String
  authorId  String
  body      String
  section   String?
  createdAt DateTime @default(now())

  meet   Meet @relation(fields: [meetId], references: [id], onDelete: Cascade)
  author User @relation("MeetCommentAuthor", fields: [authorId], references: [id], onDelete: Cascade)

  @@index([meetId])
  @@index([authorId])
}

model TeamMatRule {
  id            String  @id @default(cuid())
  teamId        String
  matIndex      Int
  color         String?
  minExperience Int
  maxExperience Int
  minAge        Float
  maxAge        Float

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([teamId, matIndex])
  @@index([teamId])
}

model MeetTeam {
  meetId String
  teamId String

  meet   Meet @relation(fields: [meetId], references: [id], onDelete: Cascade)
  team   Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@id([meetId, teamId])
}

model Bout {
  id        String   @id @default(cuid())
  meetId    String
  meet      Meet     @relation(fields: [meetId], references: [id], onDelete: Cascade)

  redId     String
  greenId   String
  type      String
  score     Float
  notes     String?

  mat       Int?
  order     Int?
  originalMat Int?

  createdAt DateTime @default(now())

  @@index([meetId])
// --- Results ---
resultWinnerId String?
resultWinner   Wrestler? @relation("BoutWinner", fields: [resultWinnerId], references: [id])
resultType     String?   // e.g., DEC, MAJ, TF, FALL, DQ, FOR
resultScore    String?   // e.g., 6-2
resultPeriod   Int?      // 1..3
resultTime     String?   // mm:ss
resultNotes    String?
resultAt       DateTime?

}


// --- NextAuth.js models ---
model User {
  role          String   @default("PARENT")
  sessionVersion Int      @default(1)
  id            String   @id @default(cuid())
  name          String?
  username      String   @unique
  email         String
  phone         String
  emailVerified DateTime?
  image         String?
  teamId        String?
  team          Team?    @relation(fields: [teamId], references: [id])
  headCoachTeam Team?   @relation("TeamHeadCoach")

  passwordHash  String?
  mustResetPassword Boolean @default(false)
  lastLoginAt  DateTime?

  accounts      Account[]
  sessions      Session[]
  meetLocks     Meet[]   @relation("MeetLock")
  updatedMeets  Meet[]   @relation("MeetUpdatedBy")
  meetChanges   MeetChange[] @relation("MeetChangeActor")
  meetComments  MeetComment[] @relation("MeetCommentAuthor")
  meetStatusHistory MeetWrestlerStatusHistory[] @relation("MeetStatusChangedBy")
  children      UserChild[]
  resetCodes    PasswordResetCode[]
  twoFactorCodes TwoFactorCode[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PasswordResetCode {
  id        String   @id @default(cuid())
  userId    String
  codeHash  String
  expiresAt DateTime
  usedAt    DateTime?
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model TwoFactorCode {
  id        String   @id @default(cuid())
  userId    String
  method    String
  codeHash  String
  expiresAt DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model UserChild {
  id         String   @id @default(cuid())
  userId     String
  wrestlerId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wrestler Wrestler @relation(fields: [wrestlerId], references: [id], onDelete: Cascade)

  @@unique([userId, wrestlerId])
  @@index([userId])
  @@index([wrestlerId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
